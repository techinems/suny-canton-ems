generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String             @id @default(cuid())
  email              String             @unique
  firstName          String?            @map("first_name")
  lastName           String?            @map("last_name")
  preferredName      String?            @map("preferred_name")
  avatar             String?            @unique @map("avatar")
  avatarFile         File?              @relation("UserAvatar", fields: [avatar], references: [id], onDelete: SetNull)
  shirtSize          ShirtSize?         @map("shirt_size")
  dob                DateTime           @db.Date
  cantonEmail        String?            @map("canton_email")
  position           Position
  major              String?
  membershipStanding MembershipStanding @map("membership_standing")
  cantonCardId       String             @map("canton_card_id")
  gpa                Float
  phoneNumber        String?            @map("phone_number")
  medicalLevel       MedicalLevel?      @map("medical_level")
  housingType        HousingType        @map("housing_type")
  buildingId         String?            @map("building_id")
  building           Building?          @relation(fields: [buildingId], references: [id])
  roomNumber         Int?               @map("room_number")
  homeAddress        String?            @map("home_address")
  localAddress       String?            @map("local_address")
  createdAt          DateTime           @default(now()) @map("created_at")
  emailVerified      Boolean            @default(false) @map("email_verified")
  isAdmin            Boolean            @default(false) @map("is_admin")
  image              String?
  name               String?
  updatedAt          DateTime           @updatedAt @map("updated_at")
  accounts           Account[]
  certifications     Certification[]    @relation("UserCertifications")
  complianceChecks   ComplianceCheck[]  @relation("UserComplianceChecks")
  sessions           Session[]
  files              File[]             @relation("UserFiles")

  @@map("users")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String    @map("user_id")
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  idToken               String?   @map("id_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Session {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model CallLog {
  id            String      @id @default(cuid())
  callReceived  DateTime    @map("call_received")
  callEnroute   DateTime    @map("call_enroute")
  onScene       DateTime    @map("on_scene")
  backInService DateTime    @map("back_in_service")
  levelOfCare   LevelOfCare @map("level_of_care")
  dispatchInfo  String?     @map("dispatch_info")
  buildingId    String?     @map("building_id")
  building      Building?   @relation(fields: [buildingId], references: [id])
  location      String? // Kept for backward compatibility and non-building locations
  jumpbagUsed   Boolean?    @map("jumpbag_used")
  type          CallType?
  itemsUsed     String[]    @map("items_used") // References to inventory items
  crew          String[] // References to user IDs
  comments      String?
  status        CallStatus?
  created       DateTime    @default(now())
  updated       DateTime    @updatedAt

  @@map("call_log")
}

model Certification {
  id               String    @id @default(cuid())
  certName         String    @map("cert_name")
  memberId         String    @map("member_id")
  certScan         String    @map("cert_scan")
  certIssueDate    DateTime? @map("cert_issue_date") @db.Date
  certExpiration   DateTime? @map("cert_expiration") @db.Date
  certNumber       String?   @map("cert_number")
  issuingAuthority String?   @map("issuing_authority")
  created          DateTime  @default(now())
  updated          DateTime  @updatedAt
  user             User      @relation("UserCertifications", fields: [memberId], references: [id], onDelete: Cascade)

  @@map("certifications")
}

model ComplianceCheck {
  id            String         @id @default(cuid())
  checkType     ComplianceType @map("check_type")
  memberChecked String         @map("member_checked")
  checkDate     DateTime       @map("check_date") @db.Date
  created       DateTime       @default(now())
  updated       DateTime       @updatedAt
  user          User           @relation("UserComplianceChecks", fields: [memberChecked], references: [id], onDelete: Cascade)

  @@map("compliance_checks")
}

model Inventory {
  id                String    @id @default(cuid())
  itemName          String?   @map("item_name")
  manufacturer      String?
  description       String?
  quantity          Float
  size              String?
  manufacturingDate DateTime? @map("manufacturing_date") @db.Date
  purchaseDate      DateTime? @map("purchase_date") @db.Date
  price             Float?
  paidBy            String?   @map("paid_by")
  disposable        Boolean?
  expirationDate    DateTime? @map("expiration_date") @db.Date
  created           DateTime  @default(now())
  updated           DateTime  @updatedAt

  @@map("inventory")
}

enum ShirtSize {
  XS   @map("xs")
  S    @map("s")
  M    @map("m")
  L    @map("l")
  XL   @map("xl")
  XXL  @map("xxl")
  XXXL @map("xxxl")
}

enum Position {
  MEMBER             @map("Member")
  PROBATIONARY_MEMBER @map("Probationary Member") 
  LIEUTENANT         @map("Lieutenant")
  CAPTAIN            @map("Captain")
  TREASURER          @map("Treasurer")
  SECRETARY          @map("Secretary")
  VICE_PRESIDENT     @map("Vice President")
  PRESIDENT          @map("President")
  ALUMNI             @map("Alumni")
  ADVISOR            @map("Advisor")
  SENATOR            @map("Senator")
  HONOR_ROLL         @map("Honor Roll")
  AUXILIARY          @map("Auxiliary")
}

enum MembershipStanding {
  GOOD @map("Good")
  BAD  @map("Bad")
}

enum MedicalLevel {
  EMR  @map("EMR")
  EMT  @map("EMT")
  AEMT @map("AEMT")
}

enum HousingType {
  ON_CAMPUS  @map("On Campus")
  OFF_CAMPUS @map("Off Campus")
  COMMUTER   @map("Commuter")
}

enum LevelOfCare {
  EMT  @map("EMT")
  NONE @map("None")
}

enum CallType {
  STANDBY @map("Standby")
}

enum CallStatus {
  CANCELLED_ENROUTE @map("Cancelled enroute")
  COMPLETE          @map("Complete")
}

enum ComplianceType {
  SEX_OFFENDER @map("Sex Offender")
  CONDUCT      @map("Conduct")
  GPA          @map("GPA")
}

model Building {
  id        String     @id @default(cuid())
  name      String     @unique
  address   String
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  users     User[]
  callLogs  CallLog[]

  @@map("buildings")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime  @map("expires_at")
  createdAt  DateTime? @default(now()) @map("created_at")
  updatedAt  DateTime? @updatedAt @map("updated_at")

  @@map("verification")
}

model File {
  id           String   @id @default(cuid())
  filename     String
  originalName String   @map("original_name")
  mimeType     String   @map("mime_type")
  size         Int      // Size in bytes
  path         String   // Storage path relative to uploads directory
  uploadedBy   String   @map("uploaded_by")
  uploader     User     @relation("UserFiles", fields: [uploadedBy], references: [id], onDelete: Cascade)
  userAvatar   User?    @relation("UserAvatar")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("files")
}
